        <img style="width:230px; height:240px;" src="@Model.LoggedUser.Picture" class="img-fluid img-thumbnail" title="Avatar" alt="Avatar picture couldn't be displayed now'">
            <input type="file" class="form-control" asp-for="@Model.Upload" />



    </div>

    <div class="column-right">

        <div class="col-md-6" style="float:left">
            <div class="media">
                <label>   Name: </label>
                <input type="text" class="form-control rounded-pill" placeholder="UserName *" asp-for="@Model.LoggedUser.UserName" />
                <span asp-validation-for="@Model.LoggedUser.UserName" class="text-danger"></span>
            </div>
            <div class="media">
                <label>   First Name </label>
                <input type="text" class="form-control rounded-pill" placeholder="FirstName *" asp-for="@Model.LoggedUser.FirstName" />
                <span asp-validation-for="@Model.LoggedUser.FirstName" class="text-danger"></span>
            </div>
            <div class="media">
                <label>   Last Name </label>
                <input type="text" class="form-control rounded-pill" placeholder="LastName *" asp-for="@Model.LoggedUser.LastName" />
                <span asp-validation-for="@Model.LoggedUser.LastName" class="text-danger"></span>
            </div>
            <div class="media">
                <label>   Age: </label>
                <input type="text" class="form-control rounded-pill" placeholder="Age *" asp-for="@Model.LoggedUser.Age" />
                <span asp-validation-for="@Model.LoggedUser.Age" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6" style="float:right">
            <div class="media">
                <label> Street: </label>
                <input type="text" class="form-control rounded-pill" placeholder="StreetAddress *" asp-for="@Model.LoggedUser.StreetAddress" />
                <span asp-validation-for="@Model.LoggedUser.StreetAddress" class="text-danger"></span>
            </div>
            <div class="media">
                <label> Zip code: </label>
                <input type="text" class="form-control rounded-pill" placeholder="ZipCode *" asp-for="@Model.LoggedUser.ZipCode" />
                <span asp-validation-for="@Model.LoggedUser.ZipCode" class="text-danger"></span>
            </div>
            <div class="media">
                <label> City: </label>
                <input type="text" class="form-control rounded-pill" placeholder="City *" asp-for="@Model.LoggedUser.City" />
                <span asp-validation-for="@Model.LoggedUser.Age" class="text-danger"></span>
            </div>
            <div class="media">
                <label> Email:</label>
                <input type="text" class="form-control rounded-pill" placeholder="Email *" asp-for="@Model.LoggedUser.Email" />
                <span asp-validation-for="@Model.LoggedUser.Email" class="text-danger"></span>
            </div>
            <div class="media">
                <label> Phone: </label>
                <input type="text" class="form-control rounded-pill" placeholder="PhoneNumber *" asp-for="@Model.LoggedUser.PhoneNumber" />
                <span asp-validation-for="@Model.LoggedUser.PhoneNumber" class="text-danger"></span>
            </div>
        </div>


    </div>

    <div class="container" style="position:absolute; bottom:-22%; left:-2%">
        <div class="form-group" style="display:inline-flex">

            <a asp-page="/UserAccount/EditUser" class="btn rounded-pill" style=" font-size: x-large; margin-right:25px; margin-top:30px; background-color: rgb(163 160 130);">Save Changes</a>

