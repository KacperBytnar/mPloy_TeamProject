<style>
    * {
        text-overflow: auto;
        box-sizing: border-box;
    }

    .profile {
        margin: auto;        
        padding-top: 20px;
        background-size: cover;
        
    }

    label {
        font-weight: 600;
        margin-right: 10px;
        width: 100px;
    }
    .media{
        margin-bottom:10px;

    }



    .column {
        float: left;
        padding: 10px;
        height: 300px;
    }

    .left {
        width: 25%;
    }

    .right {
        width: 50%;
    }


    .row:after {
        content: "";
        display: table;
        clear: both;
    }

    .img {
        background-size: cover;
        width: 240px;
        height: 300px;
        object-fit: contain;
        
    }

    .row {
        margin-top:10px;
        margin-bottom:10px;
        margin-left:20%;
        top: 30%;
        position: absolute;
    }



</style>





